<%= render 'layouts/errors', resource: @user %>

<div class="form-group row">
  <%= f.label :full_name, class: 'col-sm-1 control-label' %>
  <div class="col-sm-7">
    <%= f.text_field :full_name, class: 'form-control' %>
  </div>
</div>

<div class="form-check row d-flex ml-3">
  <%= f.label :role, 'Admin', class: 'col-sm-1 form-check-label' %>
  <%= f.check_box :role, {class: 'form-check-input', checked: @user.admin?}, User.roles[:admin], User.roles[:member] %>
</div>

<div class="form-group row">
  <div class="col-sm-8">
    <div class='card-footer d-flex justify-content-md-center mx-md-auto mt-5 w-100'>
      <%= f.submit t('helpers.buttons.save'), class: 'btn btn-primary' %>
      <%= link_to t('helpers.links.back'), admin_users_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>
