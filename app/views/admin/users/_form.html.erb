<div class='field row card-title'>
  <div class='col-sm-3'>
    <%= f.label :full_name %>
  </div>
  <div class='col-sm-5 form-group'>
    <%= f.text_field :full_name, class: 'form-control', placeholder: t('activerecord.attributes.user.full_name'), required: true %>
    <div class='valid-tooltip form-validation-tooltip-placement'>
      <%= t('helpers.validation.valid') %>
    </div>
    <div class='invalid-tooltip form-validation-tooltip-placement'>
      <%= error_message_for(f.object, :full_name) %>
    </div>
  </div>
</div>
<div class='field row card-title'>
  <div class='col-sm-3'>
    <%= f.label :role, art('user.role'), class: 'form-check-label' %>
  </div>
  <div class='col-sm-5'>
    <div class='custom-control custom-switch  role-switcher'>
      <%= f.check_box "role", { class: "custom-control-input", checked: f.object.admin?, id: dom_id(f.object, 'switcher') }, :admin, :member %>
      <%= label_tag dom_id(f.object, 'switcher'), f.object.role.titleize, class: 'custom-control-label' %>
    </div>
  </div>
</div>
