<%= render 'layouts/errors', resource: @user %>

<div class="form-group row">
  <%= f.label :full_name, class: 'col-sm-1 control-label' %>
  <div class="col-sm-7">
    <%= f.text_field :full_name, class: 'form-control' %>
  </div>
</div>

<div class="custom-file mb-2">
  <div class='col-sm-8'>
    <%= f.file_field :avatar_image, class: 'custom-file-input' %>
  </div>
</div>

<div class="form-group">
  <div class='col-sm-8'>
    <%= f.label :avatar_image, class: 'label' %>
    <div class="dropzone dropzone-default dz-clickable" data-controller="dropzone" data-dropzone-max-file-size="2" data-dropzone-max-files="1">
    <%= f.file_field :avatar_image, direct_upload: true, data: { target: 'dropzone.input' } %>
    <div class="dropzone-msg dz-message needsclick text-gray-600">
      <h3 class="dropzone-msg-title">Drag here to upload or click here to browse</h3>
      <span class="dropzone-msg-desc text-sm">2 MB file size maximum. Allowed file types png, jpg.</span>
      </div>
    </div>
  </div>
</div>

<div class="form-grpup row d-flex ml-4">
  <%= f.label :role, 'Admin', class: 'col-sm-1 form-check-label' %>
  <%= f.check_box :role, {class: 'form-check-input', checked: @user.admin?}, :admin, :member %>
</div>

<div class="form-group row">
  <div class="col-sm-8">
    <div class='card-footer d-flex justify-content-md-center mx-md-auto mt-5 w-100'>
      <%= f.submit t('helpers.buttons.save'), class: 'btn btn-primary' %>
      <%= link_to t('helpers.links.back'), admin_users_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>
