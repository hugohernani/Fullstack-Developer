<%= render 'layouts/errors', resource: @user %>

<div class="form-group row">
  <%= f.label :full_name, class: 'col-sm-2 control-label' %>
  <div class="col-sm-6">
    <%= f.text_field :full_name, class: 'form-control' %>
  </div>
</div>

<div class="form-check row">
  <%= f.label :role, 'Admin', class: 'col-sm-2 form-check-label' %>
  <%= f.check_box :role, {class: 'form-check-input', checked: @user.admin?}, User.roles[:admin], User.roles[:no_admin] %>
</div>

<div class="form-group row">
  <div class="col-sm-offset-2 col-sm-5">
    <%= f.submit t('helpers.buttons.save'), class: 'btn btn-primary' %>
    <%= link_to t('helpers.links.back'), admin_users_path, class: 'btn btn-default' %>
  </div>
</div>
