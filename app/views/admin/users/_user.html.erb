<div class="card user-card mx-auto border-info text-center">
  <img class="card-img-top" src="https://cdn.pixabay.com/photo/2021/03/18/19/56/keyboard-6105750_960_720.jpg" alt="Keyboard">
  <div class="card-body">
    <h5 class="card-title"><%= user.full_name %></h5>
    <%= link_to t('helpers.links.show'), admin_user_path(user), id: dom_id(user), class: "card-link btn btn-primary" %>
    <%= link_to t('helpers.links.edit'), edit_admin_user_path(user), id: dom_id(user, :edit), class: "card-link btn btn-info" %>
    <%= link_to t('helpers.links.delete'), admin_user_path(user), method: :delete, id: dom_id(user, :delete),
        data: { confirm: 'WARNING! Are you sure that you want to delete this user?' }, class: "card-link btn btn-danger" %>
  </div>

  <%= render 'role_switcher', user: user %>
</div>
